<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<!-- Maven 모델 버전 -->
	<modelVersion>4.0.0</modelVersion>
	<!-- 부모 POM 설정. Spring Boot 프로젝트의 기본 설정을 상속받습니다. -->
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.5.8</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<!-- 프로젝트의 고유 식별자 (Group ID) -->
	<groupId>com.kydbm</groupId>
	<!-- 프로젝트의 결과물 이름 (Artifact ID) -->
	<artifactId>monarch</artifactId>
	<!-- 프로젝트 버전 -->
	<version>10.0.1</version>
	<!-- 패키징 방식 (jar, war 등) -->
	<packaging>war</packaging>
	<!-- 프로젝트 이름 -->
	<name>monarch</name>
	<!-- 프로젝트 설명 -->
	<description>MonArch project for Spring Boot</description>

	<!-- 프로젝트 속성 정의 -->
	<properties>
		<!-- 사용할 Java 버전 -->
		<java.version>17</java.version>
	</properties>
	<!-- 프로젝트 의존성 관리 -->
	<dependencies>
		<!-- 스프링 부트 핵심 스타터: 자동 설정, 로깅, YAML 등 기본 기능 제공 -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter</artifactId>
		</dependency>
		<!-- Spring Data JPA 스타터: JPA, Hibernate를 사용한 데이터베이스 연동 지원 -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
		<!-- Spring Security 스타터: 인증 및 권한 부여 기능 제공 -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-security</artifactId>
		</dependency>
		<!-- JDBC API 및 DataSource 지원 -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-jdbc</artifactId>
		</dependency>
		<!-- Spring MVC를 사용한 웹 애플리케이션 개발 지원 (Tomcat 내장) -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<!-- MyBatis 프레임워크와 스프링 부트 연동 지원 -->
		<!-- WAR 배포를 위해 내장 톰캣을 제외하고, provided 스코프로 변경합니다. -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-tomcat</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.mybatis.spring.boot</groupId>
			<artifactId>mybatis-spring-boot-starter</artifactId>
			<version>4.0.0</version>
		</dependency>

		<!-- 스프링 부트 개발 도구: 자동 재시작, LiveReload 등 개발 편의 기능 제공 -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-devtools</artifactId>
			<scope>runtime</scope>
			<optional>true</optional>
		</dependency>
		<!-- Lombok: @Getter, @Setter, @ToString 등 어노테이션으로 boilerplate 코드 자동 생성 -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<optional>true</optional>
		</dependency>
		<!-- 스프링 부트 테스트 스타터: JUnit, Mockito 등 테스트 라이브러리 포함 -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- 리액티브 스트림 테스트 지원 -->
		<dependency>
			<groupId>io.projectreactor</groupId>
			<artifactId>reactor-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- Spring Batch 테스트 지원 -->
		<dependency>
			<groupId>org.springframework.batch</groupId>
			<artifactId>spring-batch-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- Spring Security 테스트 지원 -->
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-test</artifactId>
			<scope>test</scope>
		</dependency>
		
		<!-- Oracle JDBC 드라이버 및 관련 라이브러리(ucp, oraclepki 등) 포함 -->
		<!-- 외부 Maven 저장소 접근이 가능할 경우:
			'ojdbc11-production' POM 타입을 사용하면 ojdbc11.jar, ucp.jar, oraclepki.jar 등
			필요한 모든 라이브러리가 함께 포함되어 MANIFEST 관련 경고를 해결할 수 있음. -->
		
		<dependency>
			<groupId>com.oracle.database.jdbc</groupId>
			<artifactId>ojdbc11-production</artifactId>
			<version>23.26.0.0.0</version>
			<type>pom</type>
		</dependency>
		
		<!-- 방화벽 내부 환경(외부 Maven 접근 불가)일 경우:
			프로젝트 내 lib 폴더에 ojdbc11.jar 파일을 직접 포함시켜 사용.
			예: src/main/resources/lib/ojdbc11.jar -->
		<!-- <dependency>
			<groupId>com.oracle.database.jdbc</groupId>
			<artifactId>ojdbc11</artifactId>
			<version>23.26.0.0.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/src/main/resources/lib/ojdbc11.jar</systemPath>
		</dependency> -->

		<!-- JJWT (Java JWT): JWT 생성 및 검증을 위한 API -->
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-api</artifactId>
			<version>0.13.0</version>
		</dependency>
		<!-- JJWT (Java JWT): 핵심 구현체 -->
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-impl</artifactId>
			<version>0.13.0</version>
		</dependency>
		<!-- JJWT (Java JWT): Jackson 라이브러리를 사용한 JSON 처리 지원 -->
		<dependency>
			<groupId>io.jsonwebtoken</groupId>
			<artifactId>jjwt-jackson</artifactId>
			<version>0.13.0</version>
		</dependency>
	</dependencies>

	<!-- 빌드 관련 설정 -->
	<build>
		<finalName>ROOT</finalName>
		<plugins>
			<!-- 스프링 부트 메이븐 플러그인: 실행 가능한 jar 파일 생성 등 지원 -->
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<!-- 애플리케이션의 메인 클래스 지정 -->
					<mainClass>com.kydbm.monarch.MonarchApplication</mainClass>
					<!-- JVM 실행 인수 추가. Java 17+에서 리플렉션 관련 경고를 해결하기 위함 -->
					<jvmArguments>
						--add-opens java.base/java.util=ALL-UNNAMED
					</jvmArguments>
				</configuration>
			</plugin>

			<!-- Frontend Maven Plugin: React 앱 빌드 자동화 -->
			<plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
				<version>1.15.0</version>
				<configuration>
					<!-- 프론트엔드 프로젝트 디렉토리 -->
					<workingDirectory>monarch-app</workingDirectory>
					<!-- 사용할 Node.js와 npm 버전 -->
					<nodeVersion>v20.19.0</nodeVersion>
					<npmVersion>10.2.4</npmVersion>
				</configuration>
				<executions>
					<!-- npm install 실행 -->
					<execution>
						<id>install node and npm</id>
						<goals>
							<goal>install-node-and-npm</goal>
						</goals>
					</execution>
					<!-- npm install 실행 -->
					<execution>
						<id>npm install</id>
						<goals>
							<goal>npm</goal>
						</goals>
						<configuration>
							<arguments>install</arguments>
						</configuration>
					</execution>
					<!-- npm run build 실행 -->
					<execution>
						<id>npm run build</id>
						<goals>
							<goal>npm</goal>
						</goals>
						<configuration>
							<arguments>run build</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Maven Resources Plugin: 빌드된 프론트엔드 파일을 static 폴더로 복사 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-react-build</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.basedir}/src/main/resources/static</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/monarch-app/dist</directory>
									<filtering>false</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
